generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  password  String
  avatar    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([name, email])
  @@map("users")
}

model Chat {
  id          String   @id @default(uuid())
  user1Id     String
  user2Id     String
  lastMessage String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([user1Id, user2Id])
  @@map("chats")
}

model Message {
  id        String   @id @default(uuid())
  chatId    String
  userId    String
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([chatId, userId])
  @@map("messages")
}
